{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./*"],
      "@components*": ["./components*"],
      "@images/*": ["./images/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "custom.d.ts", "src", "src/components", "src/images"]
}
